@model IEnumerable<UserViewModels>
@{
    ViewBag.Title = "Managerment user";
}

<h3>@ViewBag.Title</h3>

<a asp-controller="User" asp-action="Create" class="btn btn-warning" style="width:auto"><i class="fas fa-plus"></i> Create user</a>

<table class="table table-bordered table-hover mt-2">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>City</th>
            <th>Address</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
        <tr>
            <td>@user.UserId</td>
            <td>@user.Email</td>
            <td>@user.City</td>
            <td>@user.Address</td>
            <td>@user.RolesName</td>
            <td>
                <a asp-controller="User" asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-outline-warning"> <i class="fas fa-edit"></i> Edit</a>
                <a asp-controller="User" asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-outline-danger" style="width: auto"><i class="fas fa-user-slash"></i> Delete</a>
            </td>
        </tr>
            }
        }
    </tbody>
</table>