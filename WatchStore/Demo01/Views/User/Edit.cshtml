@model EditUserViewModels
@{
    ViewBag.Title = "Edit user";
    var roles = ViewBag.Roles as IQueryable<IdentityRole>;
}
<div class="card my-lg-5">
    <div class="card-header bg-info">
        <h1>Edit User</h1>
    </div>
    <div class="card-body">
        <form asp-controller="User" asp-action="Edit" method="post" class="mb-auto">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input hidden asp-for="userId" />
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="City"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="City" class="form-control" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Address" class="form-control" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-2">
                    <label asp-for="RolesId"></label>
                </div>
                <div class="col-sm-10">
                    <select asp-for="RolesId" class="custom-select">
                        <option value="">Select a role</option>
                        @if (roles != null && roles.Any())
                        {
                            foreach (var role in roles)
                            {
                                <option value="@role.Id" selected="@(role.Id == Model.RolesId)">@role.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="RolesId" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">
                    Update                    
                </button>
                <a asp-controller="User" asp-action="Index" class="btn btn-warning">Back</a>
            </div>
        </form>
    </div>
</div>